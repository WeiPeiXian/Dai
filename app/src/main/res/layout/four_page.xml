<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="姓名:"
            android:textSize="20sp"
            android:gravity="left|center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="学号："
            android:textSize="20sp"
            android:gravity="left|center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp">
        <TextView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:text="家庭情况"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp">
        <TextView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:text="学习情况"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp">
        <TextView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:text="身心情况"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp">
        <TextView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:text="其他情况"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="下一步"
            android:background="@drawable/ooopic"
            android:id="@+id/next"/>
    </LinearLayout>
</LinearLayout>