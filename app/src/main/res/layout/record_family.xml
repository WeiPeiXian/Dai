<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title"/>
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="姓名:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="100dp"
            android:textSize="20sp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:text="学号:"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/studentID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="见证人"
                android:textSize="20sp"
                android:gravity="left|top"/>
            <EditText
                android:id="@+id/third_person"
                android:layout_width="match_parent"
                android:editable="false"
                android:background="@drawable/textview_border"
                android:layout_height="wrap_content"
                android:gravity="left|top"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textSize="20sp"
                android:gravity="left|top"/>
            <EditText
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:editable="false"
                android:background="@drawable/textview_border"
                android:layout_height="wrap_content"
                android:gravity="left|top"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="地点"
                android:textSize="20sp"
                android:gravity="left|top"/>
            <EditText
                android:id="@+id/address"
                android:editable="false"
                android:layout_width="match_parent"
                android:background="@drawable/textview_border"
                android:layout_height="wrap_content"
                android:gravity="left|top"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="方式"
                android:textSize="20sp"
                android:gravity="left|top"/>
            <EditText
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:editable="false"
                android:background="@drawable/textview_border"
                android:layout_height="wrap_content"
                android:gravity="left|top"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="记录人"
                android:textSize="20sp"
                android:gravity="left|top"/>
            <EditText
                android:id="@+id/recorder"
                android:layout_width="match_parent"
                android:editable="false"
                android:background="@drawable/textview_border"
                android:layout_height="wrap_content"
                android:gravity="left|top"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="主要内容"
                android:textSize="20sp"
                android:gravity="left|top"/>

            <EditText
                android:id="@+id/mainmessage"
                android:editable="false"
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="备注"
                android:textSize="20sp"
                android:gravity="left|top"/>

            <EditText
                android:id="@+id/other"
                android:editable="false"
                android:background="@drawable/textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"/>
        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
